<%- include('../partials/header') %>

    <div class="container">
        <header>
                <h1>My Plants</h1>
            </header>
            <table>
                <thead>
                    <tr>
                        <th>Plant Name</th>
                        <th>Nickname</th>
                        <th>Last Watered</th>
                        <th>Purchased</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <% plants.forEach(function(f) { %>
                        <tr>
                            <td>
                                <%= f.airline %>
                            </td>
                            <td>
                                <%= f.airport %>
                            </td>
                            <td>
                                <%= f.flightNo %>
                            </td>
                            <td>
                                <%= f.departs.toLocaleString() %>
                            </td>
                            <td>
                                <a href="/plants/<%= f._id %>">DETAILS</a>
                            </td>
                        </tr>
                        <% }); %>
                </tbody>
            </table>

    <%- include('../partials/footer') %>