<%- include('../partials/header') %>

    <div class="container">
        <h2>Plant Details</h2>
        <p><strong>Name:</strong>&nbsp;<%= plant.name %>
        </p>
        <p><strong>Nickname:</strong>&nbsp;<%= plant.nickname || 'N/A' %>
        </p>
        <p><strong>Last Watered:</strong>&nbsp;<%= plant.wateredDate ? plant.wateredDate.toDateString() : 'N/A' %>
        </p>
        <!-- Comment section -->
        <h2>Comments</h2>
        <!-- Comment form -->
        <form action="/plants/<%= plant._id %>/comments" method="POST">
            <textarea name="text" rows="4" cols="50"></textarea><br>
            <button type="submit">Add Comment</button>
        </form>

        <h2>Comments</h2>
        <ul>
            <% plant.comments.forEach(comment=> { %>
                <li><%- comment.text.replace(/\n/g, '<br>' ) %></li>
                <% }) %>
        </ul>
    </div>

    <%- include('../partials/footer') %>